{
  "nyc": {
    "include": "**",
    "exclude": "**/*.spec.js",
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "main": "src/index.js",
  "name": "miqobot",
  "mocha": {
    "spec": "src/test/**/*.js"
  },
  "author": {
    "url": "https://github.com/bosuweru",
    "name": "Allan",
    "email": "116328571+bosuweru@users.noreply.github.com"
  },
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "test": "cross-env NODE_ENV=staging nyc mocha",
    "start": "node -r dotenv-expand/config . dotenv_config_path=private/.env",
    "deploy:production": "cross-env NODE_ENV=production node ./src/scripts/deployment.js",
    "deploy:development": "node -r dotenv-expand/config ./src/scripts/deployment.js dotenv_config_path=private/.env"
  },
  "version": "2.0.0",
  "description": "A multipurpose and open-source Discord bot that interacts with XIVAPI.",
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": false
    },
    "extends": [
      "eslint:recommended",
      "plugin:mocha/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    }
  },
  "dependencies": {
    "@sapphire/framework": "^4.4.4",
    "@sapphire/plugin-logger": "^3.0.4",
    "@sapphire/time-utilities": "^1.7.9",
    "discord.js": "^14.11.0",
    "dotenv": "^16.1.3",
    "dotenv-expand": "^10.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "sinon": "^15.1.2"
  }
}
